<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.hyundai.myexperience.ui.main.schedule.ScheduleViewModel"/>

        <variable
            name="scheduleViewModel"
            type="com.hyundai.myexperience.ui.main.schedule.ScheduleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.main.main.MainFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/schedule_pleasure_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="32dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_schedule" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>