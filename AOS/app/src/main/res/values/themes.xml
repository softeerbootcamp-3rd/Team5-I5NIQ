<resources>

    <style name="Base.Theme.MyExperience" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/icon_back</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.MyExperience" parent="Base.Theme.MyExperience" />

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="TabTextSmall" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/hdharmony_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabTextBig" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/hdharmony_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>